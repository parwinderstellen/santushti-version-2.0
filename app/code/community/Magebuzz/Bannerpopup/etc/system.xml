<?xml version="1.0"?>
<config>
  <tabs>
    <magebuzz translate="label">
      <label>Magebuzz Extension</label>
      <sort_order>400</sort_order>
    </magebuzz>
  </tabs>
  <sections>
    <bannerpopup translate="label" module="bannerpopup">
      <label>Bannerpopup</label>
      <tab>magebuzz</tab>
      <frontend_type>text</frontend_type>
      <sort_order>299</sort_order>
      <show_in_default>1</show_in_default>
      <show_in_website>1</show_in_website>
      <show_in_store>1</show_in_store>
      <groups>
        <general translate="label">
          <label>General Setting</label>
          <frontend_type>text</frontend_type>
          <sort_order>1</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
          <fields>          
            <showpopup translate="label">
              <label>Display in Home Page</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>1</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </showpopup>
            <cookietime translate="label">
              <label>set cookie time out</label>
              <frontend_type>text</frontend_type>   
              <comment>Input the number of day</comment>           
              <sort_order>3</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
              <validate>validate-number</validate>
            </cookietime>
            <hidepopup translate="label">
              <label>Hide popup after Customer see it</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>2</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </hidepopup>
          </fields>
        </general>
      </groups>
    </bannerpopup>
  </sections>
</config>